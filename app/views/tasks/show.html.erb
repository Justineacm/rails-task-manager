<div class="container">
<% if @task.completed == true%>
  <h1><i class="fa-regular fa-square-check"></i><%= @task.title %></h1>
  <p><%= @task.details %></p>
<% else %>
  <h1><i class="fa-regular fa-square"></i><%= @task.title %></h1>
  <p><%= @task.details %></p>
<% end %>

<%= link_to "Back to List", tasks_path, class:"btn btn-primary" %>
<%= link_to "Edit task", edit_task_path(@task), class:"btn btn-secondary" %>
<%= link_to "Delete task",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger" %>
</div>
